{
    "manifest_version": 2,
    "name": "OB-PIT",
    "description": "An insulting display of how browser plugins can screw you over like a badger on Friday night",
    "version": "0.0.1",
    "icons": {
        "64": "icons/icon.png"
    },
    "background": {
        "page": "./background/index.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.mozilla.org/*"],
            "js": ["content_script.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "browserAction/index.html",
        "default_title": "OB-PIT"
    },
    "page_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "pageAction/index.html",
        "default_title": "OB-PIT"
    },
    "options_ui": {
        "page": "options/index.html"
    },
    "permissions": ["storage", "tabs", "<all_urls>"],
    "browser_specific_settings": {
        "gecko": {
            "id": "extensions@mrpuncake.fun"
        }
    }
}
